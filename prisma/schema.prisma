generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  name           String?  @db.VarChar(255)
  emailAddress   String   @unique @db.VarChar(255)
  emailConfirmed Boolean  @default(false)
  password       String
  createdAt      DateTime @default(now())

  @@index([emailAddress])
}

model Contact {
  id        String   @id
  name      String
  email     String
  message   String
  reason    String
  origin    String
  status    String
  createdAt DateTime @default(now())
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  image     String
  createdAt DateTime @default(now())
  tags      String[]
}
